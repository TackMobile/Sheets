<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ccc"
	tools:context=".SheetSampleMainActivity" >

	<Button
		android:id="@+id/btn_explicit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="addSheetExplicitly"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_vertical_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:text="Add Sheet Explicitly"
		tools:ignore="HardcodedText" />

	<Button
		android:id="@+id/btn_implicit"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/btn_explicit"
		android:onClick="addSheetImplicity"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_vertical_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:text="Add Sheet Implicitly"
		tools:ignore="HardcodedText" />

	<com.tackmobile.sheets.SheetLayout
		android:id="@+id/sheet_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

</RelativeLayout>